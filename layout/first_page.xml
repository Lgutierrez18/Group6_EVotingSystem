<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mountaintrees">

    <TextView
        android:id="@+id/titleLbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@color/colorPrimaryDark"
        android:padding="10dp"
        android:text="    2020 E-VOTE"
        android:textColor="#FF5722"
        android:textSize="48sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/primariesBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleLbl"
        android:layout_marginTop="35dp"
        android:background="@color/colorPrimary"
        android:onClick="goToPrimaries"
        android:text="Primary Election"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/primariesLbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/primariesBtn"
        android:background="@color/colorPrimary"
        android:text="Primary Election Page will be available on March 3rd, 2020 from 7am to 8pm"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <Button
        android:id="@+id/propsbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/primariesLbl"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimary"
        android:onClick="goToPropositions"
        android:text="Propositions "
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/propsLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/propsbtn"
        android:background="@color/colorPrimary"
        android:text="The list of Propositions will be available to chose from after the primary election, and will be submitted on November 3rd, 2020 at 7am"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <Button
        android:id="@+id/candidatesBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/propsLbl"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimary"
        android:onClick="goToCandidates"
        android:text="Candidates"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/candidateLbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/candidatesBtn"
        android:background="@color/colorPrimary"
        android:text="Candidates list will be available after the primary election, and will be submitted on November 3rd, 2020 at 7am."
        android:textColor="@color/white"
        android:textSize="18dp" />

    <Button
        android:id="@+id/goBackBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/candidateLbl"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="45dp"
        android:background="@color/colorPrimary"
        android:onClick="goBacktoLogIn"
        android:padding="10dp"
        android:text="Go Back"
        android:textColor="@color/white" />

</RelativeLayout>
