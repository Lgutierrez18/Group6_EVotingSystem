<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kellylake">

    <TextView
        android:id="@+id/titleLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:text="Primary Election "
        android:textColor="@color/white"
        android:textSize="48sp" />

    <TextView
        android:id="@+id/anouncementLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleLbl"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="5dp"
        android:background="@color/white"
        android:padding="10dp"
        android:text="Primaries will be available to vote on March 3rd, from 7am to 8pm"
        android:textColor="@color/colorPrimaryDark" />
</RelativeLayout>
