<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sunset">

    <TextView
        android:id="@+id/titleLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/colorPrimary"
        android:text="2020 General Election Candidates"
        android:textColor="@color/white"
        android:textSize="48sp" />

    <TextView
        android:id="@+id/anouncementLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleLbl"
        android:layout_margin="10dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"
        android:background="@color/black"
        android:text="The 2020 General election candidates list will be available after the primary election has ended. Once the list becomes available, the final votes will not be submitted until November 3rd. 2020 at 7am. "
        android:textColor="@color/white" />
</RelativeLayout>
