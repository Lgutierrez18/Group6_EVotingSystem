<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yosemite">

    <TextView
        android:id="@+id/welcomeLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:padding="10dp"
        android:text="                   Welcome!                     To Register to Vote Please fill out the form below: "
        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/fnNamelbl"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcomeLbl"
        android:layout_alignLeft="@id/birthdayLbl"
        android:layout_alignRight="@id/birthdayLbl"
        android:layout_alignBottom="@id/firstNameInput"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="0dp"
        android:background="#000000"
        android:text="First Name: "
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/firstNameInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcomeLbl"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_toRightOf="@id/fnNamelbl"
        android:background="#FFFFFF"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/lstNamelbl"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/fnNamelbl"
        android:layout_alignLeft="@id/cityLbl"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:background="@color/black"
        android:text="Last Name:"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/lastNameInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firstNameInput"
        android:layout_alignLeft="@id/firstNameInput"
        android:layout_alignBottom="@id/lstNamelbl"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_toRightOf="@id/lstNamelbl"
        android:background="#FFFFFF"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/addressLbl"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/lstNamelbl"
        android:layout_alignLeft="@id/birthdayLbl"
        android:layout_alignRight="@id/birthdayLbl"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:background="@color/black"
        android:text="Address:"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/addressInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lstNamelbl"
        android:layout_alignRight="@id/cityInput"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_toRightOf="@id/addressLbl"
        android:background="@color/white"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/cityLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/addressLbl"
        android:layout_alignLeft="@id/birthdayLbl"
        android:layout_alignRight="@id/birthdayLbl"
        android:layout_marginTop="5dp"
        android:background="@color/black"
        android:text="City:"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/cityInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/addressInput"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/cityLbl"
        android:background="@color/white"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/stateLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cityLbl"
        android:layout_alignLeft="@id/birthdayLbl"
        android:layout_alignRight="@id/birthdayLbl"
        android:layout_marginTop="5dp"
        android:background="@color/black"
        android:text="State: "
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/stateInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cityLbl"
        android:layout_alignBottom="@id/stateLbl"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/cityLbl"
        android:background="@color/white"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/zipLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/stateLbl"
        android:layout_alignLeft="@id/birthdayLbl"
        android:layout_alignRight="@id/birthdayLbl"
        android:layout_marginTop="5dp"
        android:background="@color/black"
        android:text="Zip Code:"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/zipInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/stateInput"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/zipLbl"
        android:background="@color/white"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/birthdayLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/zipLbl"
        android:layout_marginTop="5dp"
        android:background="@color/black"
        android:text="Date Of Birth:"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/BirthdayInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/zipInput"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/birthdayLbl"
        android:background="@color/white"
        android:ems="10"
        android:inputType="date" />

    <TextView
        android:id="@+id/idNumlbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/birthdayLbl"
        android:layout_alignLeft="@id/birthdayLbl"
        android:layout_alignRight="@id/birthdayLbl"
        android:layout_marginTop="5dp"
        android:background="@color/black"
        android:text="CA ID#"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/idInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/BirthdayInput"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/idNumlbl"
        android:background="@color/white"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/phoneLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/idNumlbl"
        android:layout_alignLeft="@id/birthdayLbl"
        android:layout_alignRight="@id/birthdayLbl"
        android:layout_marginTop="5dp"
        android:background="@color/black"
        android:text="Phone:"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/phoneInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/idInput"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/birthdayLbl"
        android:background="@color/white"
        android:ems="10"
        android:inputType="number"
        android:phoneNumber="true"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/emailLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phoneLbl"
        android:layout_alignLeft="@id/birthdayLbl"
        android:layout_alignRight="@id/birthdayLbl"
        android:layout_marginTop="5dp"
        android:background="@color/black"
        android:text="Email:"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/emailInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phoneInput"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/emailLbl"
        android:background="@color/white"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/passwordLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailLbl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@color/black"
        android:text="Create Password: "
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/passInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/passwordLbl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:ems="10"
        android:inputType="textPassword"
        android:password="true" />

    <Button
        android:id="@+id/registerBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/passInput"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="15dp"
        android:background="@color/colorPrimaryDark"
        android:padding="@dimen/buttonPadding"
        android:text="Register"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/passInput"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/registerBtn"
        android:background="@color/colorPrimaryDark"
        android:onClick="goBack"
        android:padding="@dimen/buttonPadding"
        android:text="Go Back"
        android:textColor="@color/white" />

</RelativeLayout>
